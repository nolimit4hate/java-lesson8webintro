<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!-- Home page-->
    <welcome-file-list>
        <welcome-file>/pages/home/home.jsp</welcome-file>
    </welcome-file-list>
<!-- Home page-->

<!-- UserController servlet -->
    <servlet>
        <servlet-name>userShow</servlet-name>
        <servlet-class>controllers.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userShow</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
<!-- UserController servlet -->

<!-- JDBC connection data -->
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>dbURL</param-name>
        <param-value>jdbc:postgresql://localhost:5432/lesson8db</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriverName</param-name>
        <param-value>org.postgresql.Driver</param-value>
    </context-param>
<!-- JDBC connection data -->

    
<!-- Error pages -->
    <!-- Registration -->
    <servlet>
        <servlet-name>errorPageLogin</servlet-name>
        <jsp-file>/pages/error/error-registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>errorPageLogin</servlet-name>
        <url-pattern>/error/registration</url-pattern>
    </servlet-mapping>
    <!-- 404 -->
    <servlet>
        <servlet-name>error404</servlet-name>
        <jsp-file>/pages/error/error-404.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>error404</servlet-name>
        <url-pattern>/error/404</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404</location>
    </error-page>
    <!-- 403 -->
    <servlet>
        <servlet-name>error403</servlet-name>
        <jsp-file>/pages/error/error-403.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>error403</servlet-name>
        <url-pattern>/error/403</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>403</error-code>
        <location>/error/403</location>
    </error-page>
    <!-- other errors -->
    <servlet>
        <servlet-name>errorOther</servlet-name>
        <jsp-file>/pages/error/error-other.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>errorOther</servlet-name>
        <url-pattern>/error/other</url-pattern>
    </servlet-mapping>
<!-- Error pages   -->

